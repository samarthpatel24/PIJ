<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Employee ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Department:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="departmentField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Button text="Create Employee Table" onAction="#createTable" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Button text="Register Employee" onAction="#registerEmployee" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Button text="View Employees" onAction="#viewEmployees" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <Button text="Update Employee" onAction="#updateEmployee" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>
